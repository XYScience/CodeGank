            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="10"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>